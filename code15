plugins {
    kotlin("jvm") version "21"
    id("io.spring.dependency-management") version "1.1.4"
}

repositories {
    mavenCentral()
}

dependencies {
    implementation("org.springframework:spring-context:6.1.3") // Core Spring Context
    implementation("org.springframework:spring-core:6.1.3") // Core Spring Module
    implementation("org.springframework:spring-beans:6.1.3") // Bean Factory & Dependency Injection
    implementation("org.springframework:spring-aop:6.1.3") // AOP support
    implementation("org.springframework:spring-expression:6.1.3") // Expression Language (SpEL)
    implementation("org.springframework:spring-jdbc:6.1.3") // JDBC support
    implementation("org.springframework:spring-tx:6.1.3") // Transaction management
    implementation("org.springframework:spring-web:6.1.3") // Web module (without Spring Boot)
    implementation("org.springframework:spring-webmvc:6.1.3") // Spring MVC
    implementation("org.springframework:spring-messaging:6.1.3") // Messaging module
    implementation("org.springframework:spring-orm:6.1.3") // ORM integration (Hibernate, JPA)
    implementation("org.springframework:spring-test:6.1.3") // Testing support
    implementation("org.springframework:spring-security-core:6.1.3") // Security core
    implementation("org.springframework:spring-security-config:6.1.3") // Security config
    implementation("org.springframework:spring-security-web:6.1.3") // Security for web apps
    implementation("org.springframework:spring-remoting:6.1.3") // RMI, Hessian, Burlap, Web Services
    implementation("org.springframework:spring-context-support:6.1.3") // Additional context support

    // Database dependencies
    runtimeOnly("org.postgresql:postgresql")
    runtimeOnly("mysql:mysql-connector-java")
    runtimeOnly("org.h2database:h2")

    // Testing
    testImplementation("junit:junit:4.13.2")
    testImplementation("org.springframework:spring-test:6.1.3")
}